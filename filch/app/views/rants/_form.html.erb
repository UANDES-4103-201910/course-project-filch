<%= form_with(model: rant, local: true) do |form| %>
    <% if rant.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(rant.errors.count, "error") %> prohibited this rant from being saved:</h2>

        <ul>
        <% rant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :user_id, value:current_user.id, type:"hidden" %>
    </div>


    <div class="field">
      <%= form.label :title %><br>
      <%= form.text_field :title, class:"form-control" %><br>
    </div>

    <div class="field">
      <%= form.label :description %><br>
      <%= form.text_area :description, class:"form-control" %><br>
    </div>

    <div class="field">
      <%= form.label :image%><br>
      <%= form.file_field :image %><br>
    </div>
    
    <div class="field">
      <%= form.label :visibility %><br>
      <%= form.check_box :visibility %><br>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
